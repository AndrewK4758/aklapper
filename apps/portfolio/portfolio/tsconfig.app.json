{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "out-tsc/portfolio",
    "tsBuildInfoFile": "out-tsc/portfolio/tsconfig.app.tsbuildinfo",
    "jsx": "react-jsx",
    "lib": ["dom"],
    "types": ["node", "@nx/react/typings/cssmodule.d.ts", "@nx/react/typings/image.d.ts", "vite/client"],
    "rootDir": "src",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@aklapper/games-components": ["../../../libs/games-components/src/index.ts"],
      "@aklapper/media-recorder": ["../../../libs/media-recorder/src/index.ts"],
      "@aklapper/prompt-builder": ["../../../libs/gen-ai/prompt-builder/src/index.ts"],
      "@aklapper/react-shared": ["../../../libs/react-shared/src/index.ts"],

      "@aklapper/socket-io-client": ["../../../libs/socket-io/client/src/index.ts"],
      "@aklapper/types": ["../../../libs/types/src/index.ts"],
      "@aklapper/utils": ["../../../libs/utils/src/index.ts"],
      "@aklapper/vertex-ai": ["../../../libs/gen-ai/vertex-ai/src/index.ts"]
    }
  },
  "exclude": [
    "out-tsc",
    "dist",
    "tests/**/*.spec.ts",
    "tests/**/*.test.ts",
    "tests/**/*.spec.tsx",
    "tests/**/*.test.tsx",
    "tests/**/*.spec.js",
    "tests/**/*.test.js",
    "tests/**/*.spec.jsx",
    "tests/**/*.test.jsx",
    "vite.config.ts",
    "eslint.config.js"
  ],
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"],
  "references": [
    {
      "path": "../../../libs/utils/tsconfig.lib.json"
    },
    {
      "path": "../../../libs/gen-ai/prompt-builder/tsconfig.lib.json"
    },
    {
      "path": "../../../libs/gen-ai/vertex-ai/tsconfig.lib.json"
    },
    {
      "path": "../../../libs/media-recorder/tsconfig.lib.json"
    },
    {
      "path": "../../../libs/games-components/tsconfig.lib.json"
    },
    {
      "path": "../../../libs/types/tsconfig.lib.json"
    },
    {
      "path": "../../../libs/socket-io/client/tsconfig.lib.json"
    },
    {
      "path": "../../../libs/react-shared/tsconfig.lib.json"
    }
  ]
}
