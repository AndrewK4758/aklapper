{
  "extends": "../../../../tsconfig.base.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "outDir": "out-tsc/portfolio",
    "tsBuildInfoFile": "out-tsc/portfolio/tsconfig.node.tsbuildinfo",
    "jsx": "react-jsx",
    "lib": ["ESNext"],
    "types": ["node", "@nx/react/typings/cssmodule.d.ts", "@nx/react/typings/image.d.ts", "vite/client"],
    "rootDir": "./",
    "baseUrl": ".",
    "resolveJsonModule": true
  },
  "exclude": [
    "out-tsc",
    "dist",
    "tests/**/*.spec.ts",
    "tests/**/*.test.ts",
    "tests/**/*.spec.tsx",
    "tests/**/*.test.tsx",
    "tests/**/*.spec.js",
    "tests/**/*.test.js",
    "tests/**/*.spec.jsx",
    "tests/**/*.test.jsx",
    "vite.config.ts",
    "eslint.config.js"
  ],
  "include": [
    "server.ts",
    "src/main.server.tsx",
    "src/styles/themes/**/*.tsx",
    "vite.config.server.ts",
    "src/types/**/*.d.ts",
    "vite_modules.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.app.json"
    }
  ]
}
