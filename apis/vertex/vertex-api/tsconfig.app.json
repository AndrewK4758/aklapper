{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "out-tsc/vertex-api",
    "module": "nodenext",
    "types": ["node"],
    "rootDir": "src",
    "strict": false,
    "moduleResolution": "nodenext",
    "tsBuildInfoFile": "out-tsc/vertex-api/tsconfig.app.tsbuildinfo",
    "paths": {
      "@aklapper/prompt-builder": ["../../../libs/gen-ai/prompt-builder/src/index.ts"],
      "@aklapper/socket-io-server": ["../../../libs/socket-io/server/src/index.ts"],
      "@aklapper/types": ["../../../libs/types/src/index.ts"],
      "@aklapper/vertex-ai": ["../../../libs/gen-ai/vertex-ai/src/index.ts"]
    }
  },
  "include": [
    "src/**/*.ts",
    "../../../libs/gen-ai/prompt-builder/src/**/*.ts",
    "../../../libs/gen-ai/vertex-ai/src/**/*.ts",
    "../../../libs/types/src/**/*.ts",
    "../../../libs/types/src/lib/game/types/express-request.d.ts",
    "../../../libs/types/src/**/*.ts",
    "../../../libs/socket-io/server/src/**/*.ts"
  ],
  "exclude": ["out-tsc", "dist", "vitest.config.ts", "tests/**/*.spec.ts", "tests/**/*.test.ts", "eslint.config.js"],
  "references": [
    {
      "path": "../../../libs/socket-io/server/tsconfig.lib.json"
    },
    {
      "path": "../../../libs/gen-ai/prompt-builder/tsconfig.lib.json"
    },
    {
      "path": "../../../libs/types/tsconfig.lib.json"
    },
    {
      "path": "../../../libs/gen-ai/vertex-ai/tsconfig.lib.json"
    }
  ]
}
