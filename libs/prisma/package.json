{
  "name": "@aklapper/prisma",
  "private": true,
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./src/index.d.ts",
      "require": null,
      "default": "./index.js",
      "import": "./dist/main.js"
    }
  },
  "main": "./index.js",
  "types": "./src/index.d.ts",
  "type": "module",
  "dependencies": {},
  "nx": {
    "name": "prisma",
    "sourceRoot": "libs/prisma/src",
    "projectType": "library",
    "targets": {
      "generate": {
        "command": "pnpx prisma generate",
        "options": {
          "cwd": "./libs/prisma"
        }
      },
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "options": {
          "main": "libs/prisma/src/index.ts",
          "outputPath": "dist/libs/prisma",
          "outputFileName": "index.js",
          "tsConfig": "libs/prisma/tsconfig.lib.json",
          "platform": "node",
          "format": [
            "esm"
          ],
          "target": "node23",
          "sourcemap": true,
          "metafile": true,
          "declarationRootDir": "libs/prisma/src",
          "assets": [
            {
              "glob": "./README.md",
              "input": ".",
              "output": "."
            }
          ]
        }
      },
      "configurations": {
        "development": {
          "minify": false
        },
        "production": {
          "minify": true
        }
      }
    }
  }
}