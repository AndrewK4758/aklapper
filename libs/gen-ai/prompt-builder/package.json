{
  "name": "@aklapper/prompt-builder",
  "private": true,
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./src/index.d.ts",
      "import": "./index.js",
      "require": null,
      "default": "./index.js"
    }
  },
  "main": "./index.js",
  "types": "./src/index.d.ts",
  "type": "module",
  "nx": {
    "name": "prompt-builder",
    "sourceRoot": "libs/gen-ai/prompt-builder/src",
    "projectType": "library",
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "dependsOn": [
          "^typecheck"
        ],
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "options": {
          "main": "libs/gen-ai/prompt-builder/src/index.ts",
          "outputPath": "dist/libs/gen-ai/prompt-builder",
          "outputFileName": "index.js",
          "tsConfig": "libs/gen-ai/prompt-builder/tsconfig.lib.json",
          "format": [
            "esm"
          ],
          "target": "node23",
          "sourcemap": true,
          "metafile": true,
          "assets": [
            {
              "glob": "./README.md",
              "input": ".",
              "output": "."
            }
          ]
        },
        "configurations": {
          "development": {
            "minify": false
          },
          "production": {
            "minify": true
          }
        }
      }
    }
  }
}
