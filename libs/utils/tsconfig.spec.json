{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "out-tsc",
    "tsBuildInfoFile": "tsconfig.spec.tsbuildinfo",
    "module": "commonjs",
    "moduleResolution": "node10",
    "types": ["jest", "node"]
  },
  "include": [
    "jest.config.ts",
    "tests/**/*.test.ts",
    "tests/**/*.spec.ts",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "../chain/src/**/*.ts",
    "../game/src/**/*.ts",
    "../games/chutes-and-ladders/src/**/*.ts",
    "../mocks/src/**/*.ts",
    "../models/game-instance/src/**/*.ts",
    "../types/types-game/src/**/*.ts",
    "../games-components/src/**/*.ts",
    "../types/types-game/src/**/*.d.ts"
  ]
}
