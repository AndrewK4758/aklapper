{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/out-tsc",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["node", "@nx/react/typings/cssmodule.d.ts", "@nx/react/typings/image.d.ts", "vite/client"],
    "lib": ["DOM"]
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.spec.jsx",
    "**/*.test.jsx",
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "tests/**/*.test.ts",
    "tests/**/*.spec.ts",
    "tests/**/*.test.tsx",
    "tests/**/*.spec.tsx",
    "tests/**/*.test.js",
    "tests/**/*.spec.js",
    "tests/**/*.test.jsx",
    "tests/**/*.spec.jsx"
  ],
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "../libs/vertex-ai/src/**/*.ts",
    "../gen-ai/vertex-ai/src/**/*.ts",
    "../types/**/*/src/**/*.ts",
    "../types/**/*/src/**/*.d.ts",
    "../utils/src/**/*.ts"
  ],
  "references": [
    {
      "path": "../mocks/tsconfig.lib.json"
    },
    {
      "path": "../game/tsconfig.lib.json"
    },
    {
      "path": "../games-components/tsconfig.lib.json"
    },
    {
      "path": "../games/chutes-and-ladders/tsconfig.lib.json"
    },
    {
      "path": "../models/game-instance/tsconfig.lib.json"
    },
    {
      "path": "../chain/tsconfig.lib.json"
    },
    {
      "path": "../utils/tsconfig.lib.json"
    },
    {
      "path": "../types/types-ai/tsconfig.lib.json"
    },
    {
      "path": "../gen-ai/vertex-ai/tsconfig.lib.json"
    },
    {
      "path": "../types/types-api/tsconfig.lib.json"
    },
    {
      "path": "../types/types-game/tsconfig.lib.json"
    }
  ]
}
