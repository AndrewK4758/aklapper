{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "out-tsc/vitest",
    "types": ["vitest/globals", "vitest/importMeta", "vite/client", "node", "vitest"]
  },
  "include": [
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "tests/**/*.test.ts",
    "tests/**/*.spec.ts",
    "tests/**/*.test.tsx",
    "tests/**/*.spec.tsx",
    "tests/**/*.test.js",
    "tests/**/*.spec.js",
    "tests/**/*.test.jsx",
    "tests/**/*.spec.jsx",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "../gen-ai/vertex-ai/src/**/*.ts",
    "../gen-ai/vertex-ai/src/**/*.d.ts",
    "../types/**/*/src/**/*.ts",
    "../types/**/*/src/**/*.d.ts",
    "../utils/src/**/*.ts",
    "../mocks/src/**/*.ts"
  ]
}
